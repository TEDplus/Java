
public class DoDemo {

	public static void main(String[] args) {
		//4! = 4 * 3 * 2 * 1
		java.util.Scanner sc = new java.util.Scanner(System.in);
		
		do {
			System.out.print("ëª‡ Factorial ? : ");
			int su = sc.nextInt();
			int answer = 1;
			for(int i = su; i > 0; i--) {
				answer *= i;
			}
			System.out.println(su + "! = " + answer);
			System.out.println("Again(y/n) ?");
			String y_n = sc.next();
	}

}
}