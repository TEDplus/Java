
public class NestedLoopDemo {

	public static void main(String[] args) {
		
		int i = 1; //i 초기화
		while(i <= 9) { //i 조건
			//System.out.printf("%d X %d = %d%n", dan, i, dan * i);
			int dan = 2; //dan 초기화
			while(dan <= 9) { //dan 초기화
			System.out.print(dan + " X " + i + " = " + dan * i + "\t");
			dan++; //dan 증감식
		}
		System.out.println();
		i++; //i 증감식
	}

}
}